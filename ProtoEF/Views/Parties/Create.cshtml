@model ProtoEF.ViewModels.VMParty

@{
    ViewData["Title"] = "Create Party";
}

<h3>@ViewData["Title"]</h3>
<hr />
<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row" style="padding-left:15px;">
            <div class="col-sm-6">

                <div class="form-group form-group-sm">
                    <label asp-for="@Model.Parties.FirstOrDefault().Name" class="control-label"></label>
                    <input asp-for="@Model.Parties.FirstOrDefault().Name" class="form-control" autofocus />
                    <span asp-validation-for="@Model.Parties.FirstOrDefault().Name" class="text-danger"></span>
                </div>
                <div class="form-group form-group-sm">
                    <label asp-for="@Model.Parties.FirstOrDefault().Address" class="control-label"></label>
                    <textarea asp-for="@Model.Parties.FirstOrDefault().Address" class="form-control" rows="4" placeholder="Address.."></textarea>
                    <span asp-validation-for="@Model.Parties.FirstOrDefault().Address" class="text-danger"></span>
                </div>
                <div class="form-group form-group-sm">
                    <label asp-for="@Model.Parties.FirstOrDefault().CountryId" class="control-label"></label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-flag"></i></span>
                        <select asp-for="@Model.Parties.FirstOrDefault().CountryId" class="form-control" placeholder="Select Country.."
                                asp-items="@(new SelectList(Model.Countries,"CountryId","Name"))">
                            <option></option>
                        </select>
                    </div>

                    <span asp-validation-for="@Model.Parties.FirstOrDefault().CountryId" class="text-danger"></span>
                </div>
                <div class="form-group form-group-sm">
                    <label asp-for="@Model.Parties.FirstOrDefault().Phone" class="control-label"></label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                            <input asp-for="@Model.Parties.FirstOrDefault().Phone" placeholder="Phone No" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label asp-for="@Model.Parties.FirstOrDefault().Fax" class="control-label"></label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-print"></i></span>
                            <input asp-for="@Model.Parties.FirstOrDefault().Fax" placeholder="Fax No" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label asp-for="@Model.Parties.FirstOrDefault().Email" class="control-label"></label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            <input asp-for="@Model.Parties.FirstOrDefault().Email" placeholder="E-Mail Address" class="form-control" type="text">
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-sm-4">
                <div class="form-group form-group-sm">
                    <label asp-for="@Model.Parties.FirstOrDefault().AccountCode" class="control-label"></label>
                    <input asp-for="@Model.Parties.FirstOrDefault().AccountCode" class="form-control" />
                    <span asp-validation-for="@Model.Parties.FirstOrDefault().AccountCode" class="text-danger"></span>
                </div>
                <div class="form-group form-group-sm">
                    <label asp-for="@Model.Parties.FirstOrDefault().CustomsCode" class="control-label"></label>
                    <input asp-for="@Model.Parties.FirstOrDefault().CustomsCode" class="form-control" />
                    <span asp-validation-for="@Model.Parties.FirstOrDefault().CustomsCode" class="text-danger"></span>
                </div>
                <div class="form-group form-group-sm">
                    <label asp-for="@Model.Parties.FirstOrDefault().TaxNo" class="control-label"></label>
                    <input asp-for="@Model.Parties.FirstOrDefault().TaxNo" class="form-control" />
                    <span asp-validation-for="@Model.Parties.FirstOrDefault().TaxNo" class="text-danger"></span>
                </div>
                <div class="form-group form-group-sm">
                    <label asp-for="@Model.Parties.FirstOrDefault().PaymentTermId" class="control-label"></label>
                    <select asp-for="@Model.Parties.FirstOrDefault().PaymentTermId" class="form-control"
                            asp-items="@(new SelectList(Model.PaymentTerms,"PaymentTermId","Name","0"))">
                        <option>Select Terms..</option>
                    </select>
                    <span asp-validation-for="@Model.Parties.FirstOrDefault().PaymentTermId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row" style="padding-left:30px;">
            <div class="form-group form-group-sm">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </form>
    @*</div>*@
</div>

<div>
    <a asp-action="Index"><i class="fa fa-backward"></i>&nbsp;Back to List</a>
</div>

